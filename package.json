{
  "author": {
    "email": "mail.leo.coletta@gmail.com",
    "name": "Léo Coletta"
  },
  "name": "api",
  "description": "Backend for the Anaïs Coletta activities",
  "volta": {
    "node": "16.14.0",
    "npm": "8.5.4"
  },
  "packageManager": "pnpm@6.32.3",
  "scripts": {
    "setup:env": "node -r ./scripts/config scripts/setup_env.js",
    "setup:db": "node -r ./scripts/config scripts/setup_db.js",
    "build": "tsc",
    "dev:start": "pnpm run build && node -r ./scripts/config --inspect dist/index.js",
    "dev:watch": "nodemon --ext ts --exec \"pnpm run dev:start\"",
    "dev": "concurrently --kill-others -n API,DB --prefix-colors \"yellow.bold,cyan.bold\" \"pnpm run dev:watch\" \"pnpm run db:watch\"",
    "gm": "node -r ./scripts/config node_modules/graphile-migrate/dist/cli.js",
    "db:migrate": "pnpm run gm -- migrate",
    "db:watch": "pnpm run gm -- watch",
    "db:commit": "pnpm run gm -- commit",
    "db:uncommit": "pnpm run gm -- uncommit",
    "db:reset": "pnpm run gm -- reset",
    "db:dump": "pnpm run gm -- migrate && pnpm run gm -- reset --shadow --erase && pnpm run gm -- migrate --shadow --force-Actions"
  },
  "dependencies": {
    "@graphile-contrib/pg-simplify-inflector": "^6.1.0",
    "@graphile/pro": "^1.0.3",
    "chalk": "4.1.2",
    "connect-pg-simple": "^7.0.0",
    "connect-redis": "^6.1.1",
    "cors": "^2.8.5",
    "express": "4.17.3",
    "express-session": "^1.17.2",
    "helmet": "^5.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.5.2",
    "pg": "^8.7.3",
    "postgraphile": "4.12.9",
    "redis": "^4.0.4",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "0.18.8",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/connect-redis": "^0.0.18",
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/lodash": "^4.14.179",
    "@types/morgan": "^1.9.3",
    "@types/passport": "^1.0.7",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "8.11.0",
    "graphile-migrate": "^1.3.0",
    "inquirer": "^8.2.1",
    "nodemon": "2.0.15",
    "pnpm": "6.32.3",
    "typescript": "4.6.2"
  }
}
